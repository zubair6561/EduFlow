<div class="max-w-lg mx-auto bg-white border border-slate-100 rounded-2xl shadow-sm p-6 space-y-6">
  <div class="space-y-1">
    <p class="text-sm text-slate-500">Create your account</p>
    <h1 class="text-2xl font-bold text-slate-900">Join EduFlow</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :full_name, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.text_field :full_name, autofocus: true, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :role, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-slate-500 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Sign up", class: "px-4 py-2 rounded-lg bg-indigo-600 text-white font-semibold shadow" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
