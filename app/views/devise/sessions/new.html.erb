<div class="max-w-lg mx-auto bg-white border border-slate-100 rounded-2xl shadow-sm p-6 space-y-6">
  <div class="space-y-1">
    <p class="text-sm text-slate-500">Welcome back</p>
    <h1 class="text-2xl font-bold text-slate-900">Log in to EduFlow</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me, class: "rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :remember_me, class: "text-sm text-slate-700" %>
      </div>
    <% end %>

    <div class="flex items-center gap-3">
      <%= f.submit "Log in", class: "px-4 py-2 rounded-lg bg-indigo-600 text-white font-semibold shadow" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
