<%= form_with(model: [@course, @lesson], class: "space-y-4") do |form| %>
  <% if @lesson.errors.any? %>
    <div class="bg-rose-50 border border-rose-200 text-rose-700 rounded-xl p-3 text-sm">
      <p class="font-semibold"><%= pluralize(@lesson.errors.count, "error") %> prevented this lesson from saving:</p>
      <ul class="list-disc pl-4 mt-2">
        <% @lesson.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <%= form.label :title, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= form.text_field :title, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :position, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= form.number_field :position, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.label :content, class: "block text-sm font-semibold text-slate-700 mb-2" %>
    <div class="prose max-w-none bg-white border border-slate-200 rounded-lg shadow-inner">
      <%= form.rich_text_area :content %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "px-4 py-2 rounded-lg bg-indigo-600 text-white font-semibold shadow" %>
    <%= link_to "Cancel", course_path(@course), class: "text-slate-600 text-sm" %>
  </div>
<% end %>
