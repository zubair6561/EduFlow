<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-slate-500">Course catalog</p>
      <h1 class="text-2xl font-bold text-slate-900">Explore learning paths</h1>
    </div>
    <% if current_user.instructor? || current_user.admin? %>
      <%= link_to "Create course", new_course_path, class: "px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-semibold shadow-md" %>
    <% end %>
  </div>

  <% if current_user.instructor? || current_user.admin? %>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-slate-900">Your courses</h2>
        <%= link_to "Instructor dashboard", instructor_dashboard_path, class: "text-sm text-indigo-700 font-semibold" %>
      </div>
      <div class="grid md:grid-cols-3 gap-4">
        <% @my_courses.each do |course| %>
          <div class="bg-white border border-slate-100 rounded-2xl shadow-sm p-5 space-y-3">
            <div class="flex items-center justify-between">
              <p class="font-semibold text-slate-900"><%= course.title %></p>
              <span class="text-xs px-2 py-1 rounded-full <%= course.published? ? "bg-emerald-50 text-emerald-700" : "bg-amber-50 text-amber-700" %>"><%= course.status.humanize %></span>
            </div>
            <p class="text-sm text-slate-600 line-clamp-2"><%= course.description %></p>
            <div class="flex items-center justify-between text-xs text-slate-500">
              <span><%= pluralize(course.lessons.count, "lesson") %></span>
              <span><%= pluralize(course.enrollments.count, "student") %></span>
            </div>
            <div class="flex items-center gap-3">
              <%= link_to "View", course_path(course), class: "text-indigo-700 text-sm font-semibold" %>
              <%= link_to "Edit", edit_course_path(course), class: "text-slate-600 text-sm" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-slate-900">Published courses</h2>
    </div>
    <div class="grid md:grid-cols-3 gap-4">
      <% @published_courses.each do |course| %>
        <div class="bg-white border border-slate-100 rounded-2xl shadow-sm p-5 space-y-3">
          <div class="flex items-center justify-between">
            <p class="font-semibold text-slate-900"><%= course.title %></p>
            <p class="text-xs text-slate-500">By <%= course.instructor.full_name %></p>
          </div>
          <p class="text-sm text-slate-600 line-clamp-2"><%= course.description %></p>
          <div class="flex items-center justify-between text-xs text-slate-500">
            <span><%= pluralize(course.lessons.count, "lesson") %></span>
            <span><%= pluralize(course.enrollments.count, "student") %></span>
          </div>
          <%= link_to "View course", course_path(course), class: "inline-flex items-center gap-2 text-sm font-semibold text-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
