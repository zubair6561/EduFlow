<%= form_with(model: course, class: "space-y-4") do |form| %>
  <% if course.errors.any? %>
    <div class="bg-rose-50 border border-rose-200 text-rose-700 rounded-xl p-3 text-sm">
      <p class="font-semibold"><%= pluralize(course.errors.count, "error") %> prevented this course from saving:</p>
      <ul class="list-disc pl-4 mt-2">
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <%= form.label :title, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= form.text_field :title, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :status, class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= form.select :status, Course.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-semibold text-slate-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <% if current_user.admin? %>
    <div>
      <%= form.label :instructor_id, "Assign instructor", class: "block text-sm font-semibold text-slate-700 mb-1" %>
      <%= form.collection_select :instructor_id, User.instructor, :id, :full_name, { include_blank: "Select instructor" }, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <div>
    <%= form.label :thumbnail, class: "block text-sm font-semibold text-slate-700 mb-1" %>
    <%= form.file_field :thumbnail, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500 bg-white" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "px-4 py-2 rounded-lg bg-indigo-600 text-white font-semibold shadow" %>
    <%= link_to "Cancel", courses_path, class: "text-slate-600 text-sm" %>
  </div>
<% end %>
