<div class="space-y-6">
  <div>
    <p class="text-sm text-slate-500">Student dashboard</p>
    <h1 class="text-2xl font-bold text-slate-900">Your learning path</h1>
  </div>

  <div class="grid md:grid-cols-3 gap-4">
    <% @progress.each do |item| %>
      <div class="bg-white border border-slate-100 shadow-sm rounded-2xl p-5 space-y-3">
        <p class="font-semibold text-slate-900"><%= item[:course].title %></p>
        <p class="text-sm text-slate-600 line-clamp-2"><%= item[:course].description %></p>
        <div class="flex items-center justify-between text-xs text-slate-500">
          <span><%= item[:completed_lessons] %> / <%= item[:total_lessons] %> lessons</span>
          <span class="text-slate-700 font-semibold"><%= item[:percent] %>%</span>
        </div>
        <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
          <div class="h-full bg-indigo-500" style="width: <%= item[:percent] %>%"></div>
        </div>
        <%= link_to "Continue learning", course_path(item[:course]), class: "inline-flex items-center gap-2 text-sm font-semibold text-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>
