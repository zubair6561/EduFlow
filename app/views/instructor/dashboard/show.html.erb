<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-slate-500">Instructor view</p>
      <h1 class="text-2xl font-bold text-slate-900">Your courses</h1>
    </div>
    <%= link_to "New course", new_course_path, class: "px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-semibold shadow-md" %>
  </div>

  <div class="grid md:grid-cols-3 gap-4">
    <% @courses.each do |course| %>
      <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-5 space-y-3">
        <div class="flex items-center justify-between">
          <p class="font-semibold text-slate-900"><%= course.title %></p>
          <span class="text-xs px-2 py-1 rounded-full <%= course.published? ? "bg-emerald-50 text-emerald-700" : "bg-amber-50 text-amber-700" %>"><%= course.status.humanize %></span>
        </div>
        <p class="text-sm text-slate-600 line-clamp-2"><%= course.description %></p>
        <div class="flex items-center justify-between text-xs text-slate-500">
          <span><%= pluralize(course.lessons.count, "lesson") %></span>
          <span><%= pluralize(course.enrollments.count, "student") %></span>
        </div>
        <div class="flex items-center gap-3">
          <%= link_to "View", course_path(course), class: "text-indigo-700 text-sm font-semibold" %>
          <%= link_to "Edit", edit_course_path(course), class: "text-slate-600 text-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl border border-slate-100 shadow-sm">
    <div class="px-5 py-4 border-b border-slate-100 flex items-center justify-between">
      <p class="text-sm font-semibold text-slate-800">Progress snapshot</p>
      <span class="text-xs text-slate-500">Live enrollments</span>
    </div>
    <div class="divide-y divide-slate-100">
      <% @top_courses.each do |course| %>
        <div class="px-5 py-4">
          <div class="flex items-center justify-between">
            <p class="font-semibold text-slate-900"><%= course.title %></p>
            <p class="text-sm text-slate-500"><%= pluralize(course.enrollments.count, "student") %></p>
          </div>
          <div class="h-2 bg-slate-100 rounded-full mt-2 overflow-hidden">
            <% percent = course.lessons.count.zero? ? 0 : ((course.lesson_progresses&.count.to_f / course.lessons.count) * 10).clamp(0,100) %>
            <div class="h-full bg-indigo-500" style="width: <%= percent %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
