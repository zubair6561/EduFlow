<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-slate-500">Admin Control Center</p>
      <h1 class="text-2xl font-bold text-slate-900">Platform health</h1>
    </div>
  </div>

  <div class="grid md:grid-cols-3 gap-4">
    <div class="bg-white border border-slate-100 shadow-sm rounded-2xl p-5">
      <p class="text-sm text-slate-500">Total Users</p>
      <p class="text-3xl font-extrabold text-slate-900"><%= @user_count %></p>
      <p class="text-xs text-emerald-600 font-semibold">All roles</p>
    </div>
    <div class="bg-white border border-slate-100 shadow-sm rounded-2xl p-5">
      <p class="text-sm text-slate-500">Total Courses</p>
      <p class="text-3xl font-extrabold text-slate-900"><%= @course_count %></p>
      <p class="text-xs text-indigo-600 font-semibold">Draft + Published</p>
    </div>
    <div class="bg-white border border-slate-100 shadow-sm rounded-2xl p-5">
      <p class="text-sm text-slate-500">Enrollments</p>
      <p class="text-3xl font-extrabold text-slate-900"><%= @enrollment_count %></p>
      <p class="text-xs text-sky-600 font-semibold">Lifetime</p>
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-4">
    <div class="bg-white border border-slate-100 rounded-2xl shadow-sm">
      <div class="flex items-center justify-between px-5 py-4 border-b border-slate-100">
        <p class="text-sm font-semibold text-slate-800">Recent Enrollments</p>
        <span class="text-xs text-slate-500">Last 8</span>
      </div>
      <div class="divide-y divide-slate-100">
        <% @recent_enrollments.each do |enrollment| %>
          <div class="px-5 py-4 flex items-center justify-between">
            <div>
              <p class="font-semibold text-slate-900"><%= enrollment.course.title %></p>
              <p class="text-sm text-slate-500">Student: <%= enrollment.user.full_name %></p>
            </div>
            <p class="text-xs text-slate-400"><%= enrollment.created_at.strftime("%b %d, %Y") %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white border border-slate-100 rounded-2xl shadow-sm">
      <div class="flex items-center justify-between px-5 py-4 border-b border-slate-100">
        <p class="text-sm font-semibold text-slate-800">Newest Courses</p>
        <span class="text-xs text-slate-500">5 latest</span>
      </div>
      <div class="divide-y divide-slate-100">
        <% @recent_courses.each do |course| %>
          <div class="px-5 py-4">
            <div class="flex items-center justify-between">
              <p class="font-semibold text-slate-900"><%= course.title %></p>
              <span class="text-xs px-2 py-1 rounded-full <%= course.published? ? "bg-emerald-50 text-emerald-700" : "bg-amber-50 text-amber-700" %>">
                <%= course.status.humanize %>
              </span>
            </div>
            <p class="text-sm text-slate-500">Instructor: <%= course.instructor.full_name %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
